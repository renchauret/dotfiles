alias vim="nvim"
alias vi="nvim"
alias oldvim="vim"

function tg() {
   cd ~/toast/git-repos
}

function home() {
   cd ~
}

function toast_services() {
   cd ~/toast/git-repos/toast-services
   git checkout development
   git pull
}

function g2x() {
   toast_services
   ./deploy_g2_service.sh prod $1 1 $2
}

function g2() {
   oktoast production
   g2x $1 $2
}

function dg2x() {
   toast_services
   ./destroy_g2_service.sh prod $1 1 $2
}

function dg2() {
   oktoast production
   dg2x $1 $2
}

function spax() {
   toast_services
   ./deploy_spa.sh prod $1 $2
}

function spa() {
   oktoast production
   spax $1 $2
}

function dspax() {
   toast_services
   ./destroy_spa.sh prod $1 $2
}

function dspa() {
   oktoast production
   dspax $1 $2
}

function pd() {
   pushd $1
}

function gb() {
   cd ../
}

function nv() {
   nvim .
}

function gpu() {
   git pull
}

parse_git_branch() {
    git branch 2> /dev/null | sed -n -e 's/^\* \(.*\)/\1/p'
}

function gac() {
    git add .
    if [ "$1" != "" ]
    then
        git commit -m "$1" --no-verify
    else
        git commit -m "update" --no-verify
    fi
}

function gpx() {
    git push --no-verify --set-upstream origin $(parse_git_branch)
}

function gacp() {
    gac $1
    gpx
}

function clear_branches() {
    git branch | grep -v "main" | xargs git branch -D
}

function git_undo() {
    git reset HEAD~1
}

function git_undo_hard() {
    git reset --hard HEAD~1
}

function awake() {
    python3 ~/documents/awake.py $1 $2
}

function aw() {
    awake 8.5 $1
}
